@model IEnumerable<CodesWeaver.ViewModel.StudentTeacherVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Teacher List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Student Phone
            </th>
            <th>
                Department
            </th>
            <th>
                Teacher Name
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentDept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.TeacherId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TeacherId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TeacherId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>